// https://github.com/streetsidesoftware/cspell/tree/main/packages/cspell#example-cspelljson-file
{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "allowCompoundWords": true,
  "ignorePaths": [
    // Ignore Go module file
    "**/go.mod",
    // Ignore Go checksum file
    "**/*.sum",
    // Ignore Go workspace file
    "**/go.work",
    // Ignore cspell config
    "**/cspell.json",
    // Ignore vscode config
    "**/.vscode"
  ],
  "dictionaries": [
    "companies",
    "softwareTerms",
    "misc",
    "bash",
    "filetypes",
    "go",
    "customCommons",
    "customApps",
    "customSoftwares",
    "customNames"
  ],
  "dictionaryDefinitions": [
    { "name": "customCommons", "path": "./cspell-commons.dict.txt" },
    { "name": "customSoftwares", "path": "./cspell-softwares.dict.txt" },
    { "name": "customNames", "path": "./cspell-names.dict.txt" }
  ],
  "useGitignore": true,
  "gitignoreRoot": "../.."
}
